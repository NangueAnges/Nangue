#include<stdio.h>
int main(int argc, char** argv){
unsigned int a,b,c,P,S;
printf("entrer la valeur de la base du triangle");
scanf("%d",&a);
prinft("entrer la valeur de la hauteur de votre triangle");
scanf("%d",&b);
S=(a*b)/2;
printf("entrer la valeur du troisième côté du triangle");
scanf("%d",&c);
P=a+b+c;
printf("la valeur de l'aire de ce triangle est %d et la valeur du périmètre est %d:",S,P);
return 0;
}
